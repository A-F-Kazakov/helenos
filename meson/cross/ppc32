# See http://mesonbuild.com/Cross-compilation.html

[binaries]
c = 'ppc-helenos-gcc'
cpp = 'ppc-helenos-g++'
ar = 'ppc-helenos-ar'
strip = 'ppc-helenos-strip'
nm = 'ppc-helenos-nm'
objcopy = 'ppc-helenos-objcopy'
objdump = 'ppc-helenos-objdump'
as = 'ppc-helenos-as'
ld = 'ppc-helenos-ld'

[properties]
has_function_printf = true
needs_exe_wrapper = true

cc_arch = 'ppc'
bits = 32

[host_machine]
system = 'helenos'
cpu_family = 'ppc'
cpu = 'powerpc'
endian = 'big'
